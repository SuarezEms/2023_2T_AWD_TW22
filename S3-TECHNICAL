            <button onclick="appendToDisplay('/')">/</button>
            <button onclick="appendToDisplay('*')">X</button>
            <button onclick="appendToDisplay('7')" class="number-btn" id="btn7">7</button>
            <button onclick="appendToDisplay('8')" class="number-btn" id="btn8">8</button>
            <button onclick="appendToDisplay('9')" class="number-btn" id="btn9">9</button>
